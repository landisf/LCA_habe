	keywords = {Climate policy, Computable general equilibrium, Cost-effectiveness, Distributional impacts, Microsimulation},
	file = {Full Text PDF:C\:\\Users\\ladi\\Zotero\\storage\\HN98RIRH\\Landis - 2019 - Cost distribution and equity of climate policy in .pdf:application/pdf},
}

@article{landis_between-_2021,
	title = {Between- and within-country distributional impacts from harmonizing carbon prices in the {EU}},
