	file = {Full Text PDF:C\:\\Users\\ladi\\Zotero\\storage\\BY6UV2ZR\\Landis et al. - 2018 - Differentiated Carbon Prices and the Economic Cost.pdf:application/pdf;Snapshot:C\:\\Users\\ladi\\Zotero\\storage\\V3LQVAZI\\s10640-017-0130-y.html:text/html},
}

@article{landis_cost_2019,
	title = {Cost distribution and equity of climate policy in Switzerland},
	volume = {155},
	issn = {2235-6282},
